import 'package:first_app/views/home/home_content_desktop';
import 'package:first_app/views/home/home_content_mobile';
import 'package:flutter/material.dart';
import 'package:responsive_builder/responsive_builder.dart';

class HomeView extends StatelessWidget {
  const HomeView({super.key});

  @override
  Widget build(BuildContext context) {
    return ScreenTypeLayout.builder(
      mobile: (BuildContext context) => const HomeContentMobile(),
      tablet: (BuildContext context) => const HomeContentDesktop(),
    );
  }
}
